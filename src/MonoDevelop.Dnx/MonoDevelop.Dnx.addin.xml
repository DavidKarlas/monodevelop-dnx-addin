<ExtensionModel>
	<Runtime>
		<Import assembly="MonoDevelop.Dnx.dll" />

		<Import file="Licenses/Apache-2.0-LICENSE.txt" />
		<Import file="Licenses/Microsoft-AspNet-LICENSE.txt" />

		<Import file="Templates/Projects/ConsoleProject.xpt.xml"/>
		<Import file="Templates/Projects/LibraryProject.xpt.xml"/>
		<Import file="Templates/Projects/PlaceholderConsoleProject.xpt.xml"/>
	</Runtime>

	<ExtensionPoint path = "/MonoDevelop/Ide/DnxProjectTemplates" name = "File template types">
		<Description>Project templates to be shown in the New Project dialog.</Description>
		<ExtensionNode name="ProjectTemplate" type="MonoDevelop.Ide.Codons.ProjectTemplateCodon"/>
	</ExtensionPoint>

	<ExtensionPoint path = "/MonoDevelop/Ide/DnxFileTemplateTypes" name = "File template types">
		<Description>Template types which can be used to create file templates.</Description>
		<ExtensionNode name="FileTemplateType" type="MonoDevelop.Ide.Codons.FileTemplateTypeCodon"/>
	</ExtensionPoint>

	<Extension path="/MonoDevelop/ProjectModel/ProjectBindings">
		<ProjectBinding id="DnxProject" class="MonoDevelop.Dnx.DnxProjectBinding" />
	</Extension>

	<Extension path = "/MonoDevelop/ProjectModel/MSBuildItemTypes">
		<SolutionItem
			guid="{8BB2217D-0F2D-49D1-97BC-3654ED321F3B}"
			language="C#"
			type="MonoDevelop.Dnx.DnxProject"
			extension="xproj"
			handlerType="MonoDevelop.Dnx.DnxMSBuildProjectHandler" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/StartupHandlers">
		<Class class="MonoDevelop.Dnx.DnxStartupHandler" />
	</Extension>

	<Extension path="/MonoDevelop/Core/ExecutionHandlers">
		<ExecutionHandler id="Dnx" class ="MonoDevelop.Dnx.DnxExecutionHandler" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/Pads/ProjectPad">
		<NodeBuilder class="MonoDevelop.Dnx.NodeBuilders.DependenciesNodeBuilderExtension" />
		<NodeBuilder class="MonoDevelop.Dnx.NodeBuilders.DependenciesFolderNodeBuilder" />
		<NodeBuilder class="MonoDevelop.Dnx.NodeBuilders.FrameworkNodeBuilder" />
		<NodeBuilder class="MonoDevelop.Dnx.NodeBuilders.DependencyNodeBuilder" />
	</Extension>

	<Extension path="/MonoDevelop/DesignerSupport/PropertyProviders">
		<Class class="MonoDevelop.Dnx.NodeBuilders.DependencyNodePropertyProvider" />
	</Extension>

	<Extension path="/MonoDevelop/Core/StockIcons">
		<StockIcon stockid="md-dnx-nuget-package" resource="nuget-16.png" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/ProjectTemplateCategories/other/aspnet">
		<Category id="aspnet5" name="ASP.NET 5" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/DnxProjectTemplates">
		<ProjectTemplate
			id="DnxConsoleProject"
			file="Templates/Projects/ConsoleProject.xpt.xml" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate
			id="DnxPlaceholderProject"
			file="Templates/Projects/PlaceholderConsoleProject.xpt.xml" />
		<ProjectTemplate
			id="DnxLibraryProject"
			file="Templates/Projects/LibraryProject.xpt.xml" />
	</Extension>

	<Extension path = "/MonoDevelop/Ide/DnxFileTemplateTypes">
		<FileTemplateType name="File" class="MonoDevelop.Ide.Templates.CustomTextFileDescriptionTemplate"/>
	</Extension>

	<Extension path="/MonoDevelop/Ide/ProjectTemplatingProviders">
		<Class id="Dnx.ProjectTemplatingProvider" class="MonoDevelop.Ide.Templates.ProjectTemplatingProvider" />
	</Extension>

	<Extension path="/MonoDevelop/Ide/ProjectTemplateWizards">
		<Class id="MonoDevelop.Dnx.ProjectTemplateWizard" class="MonoDevelop.Dnx.DnxProjectTemplateWizard" />
	</Extension>

</ExtensionModel>